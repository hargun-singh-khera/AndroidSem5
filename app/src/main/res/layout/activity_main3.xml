<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".MainActivity3">
    <TextView
        android:id="@+id/tvfn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Enter first number "
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvfn"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/tvsn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter second number "
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvsn"
        android:layout_marginTop="42dp"
        />
    <Button
        android:id="@+id/btnadd"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="15dp"
        android:text="+"
        />
    <Button
        android:id="@+id/btnsub"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/btnadd"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="-"
        />
    <Button
        android:id="@+id/btnrem"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="%"
        android:layout_toRightOf="@+id/btnsub"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="60dp"
        />
    <Button
        android:id="@+id/btnmul"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="x"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="15dp"
        />
    <Button
        android:id="@+id/btndiv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="/"
        android:layout_toRightOf="@+id/btnmul"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <Button
        android:id="@+id/btnpow"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="^"
        android:layout_toRightOf="@+id/btndiv"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="60dp"
        />
    <TextView
        android:id="@+id/tvres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="160dp"
        android:text="Result"
        android:layout_marginTop="220dp"
        />
</RelativeLayout>